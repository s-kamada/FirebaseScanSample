    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.firebasescansamples.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.firebasescansamples.ui.firebasescan.FirebaseScanFragment"
        android:label="@string/title_firebase"
        tools:layout="@layout/fragment_firebase_scan" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.firebasescansamples.ui.vanillascan.VanillaScanFragment"
        android:label="@string/title_vanilla"
